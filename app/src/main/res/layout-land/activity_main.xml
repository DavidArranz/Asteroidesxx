<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="206dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal">

            <Button
                android:id="@+id/Button01"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:text="JUGAR"
                android:textColor="#000000"
                app:backgroundTint="#D4D5D5"
                app:elevation="0dp" />

            <Button
                android:id="@+id/button02"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="5sp"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:text="CONFIGURAR"
                android:textColor="#000000"
                app:backgroundTint="#D2D3D3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:text="Button"
                android:textColor="#000000"
                app:backgroundTint="#D0D1D1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:text="Button"
                android:textColor="#000000"
                app:backgroundTint="#CECFCF" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:layout_marginBottom="200dp"
        android:text="Asteroides"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="@+id/tableLayout" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#212121"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Asteroides"
        app:titleTextColor="#F0F0F0" />

</androidx.constraintlayout.widget.ConstraintLayout>